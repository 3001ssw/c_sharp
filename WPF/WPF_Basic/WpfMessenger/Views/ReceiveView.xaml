<UserControl x:Class="WpfMessenger.Views.ReceiveView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:WpfMessenger.Views"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800">
    <Border BorderThickness="1"
            BorderBrush="Black">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>


            <DataGrid Grid.Row="0"
                      Grid.Column="0"
                      ItemsSource="{Binding Messages}"
                      AutoGenerateColumns="False"
                      HeadersVisibility="Column"
                      CanUserAddRows="False"
                      SelectionMode="Extended"
                      SelectionUnit="FullRow"
                      IsReadOnly="True"
                      GridLinesVisibility="None"
                      CanUserSortColumns="False"
                      CanUserReorderColumns="False"
                      VirtualizingStackPanel.ScrollUnit="Pixel"
                      VirtualizingStackPanel.VirtualizationMode="Recycling"
                      ScrollViewer.CanContentScroll="True">

                <!--  칼럼  -->
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Time"
                                        Binding="{Binding Time, UpdateSourceTrigger=PropertyChanged}"
                                        Width="150"/>
                    <DataGridTextColumn Header="Type"
                                        Binding="{Binding MessageType, UpdateSourceTrigger=PropertyChanged}"
                                        Width="250"/>
                    <DataGridTextColumn Header="Object"
                                        Binding="{Binding Object, UpdateSourceTrigger=PropertyChanged}"
                                        Width="250"/>
                    <DataGridTextColumn Header="Message"
                                        Binding="{Binding Message, UpdateSourceTrigger=PropertyChanged}"
                                        Width="*"/>
                </DataGrid.Columns>
            </DataGrid>

            <StackPanel Grid.Row="1"
                        Grid.Column="0"
                        Orientation="Horizontal">
                <TextBlock Text="Channel"
                           Width="100"/>
                <TextBox Text="{Binding Channel, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                         Width="200"/>
                <Button Content="Set"
                        Width="100"
                        Command="{Binding SetChannelCommand}"/>

                <TextBlock Text="{Binding CurrentChannel, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, StringFormat='{}    현재 채널 명: [{0}]'}"
                           Width="150"/>
            </StackPanel>
            <DataGrid Grid.Row="2"
                      Grid.Column="0"
                      ItemsSource="{Binding ChannelMessages}"
                      AutoGenerateColumns="False"
                      HeadersVisibility="Column"
                      CanUserAddRows="False"
                      SelectionMode="Extended"
                      SelectionUnit="FullRow"
                      IsReadOnly="True"
                      GridLinesVisibility="None"
                      CanUserSortColumns="False"
                      CanUserReorderColumns="False"
                      VirtualizingStackPanel.ScrollUnit="Pixel"
                      VirtualizingStackPanel.VirtualizationMode="Recycling"
                      ScrollViewer.CanContentScroll="True">

                <!--  칼럼  -->
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Time"
                                        Binding="{Binding Time, UpdateSourceTrigger=PropertyChanged, StringFormat='{}HH:mm:ss.fff'}"
                                        Width="150"/>
                    <DataGridTextColumn Header="Type"
                                        Binding="{Binding MessageType, UpdateSourceTrigger=PropertyChanged}"
                                        Width="250"/>
                    <DataGridTextColumn Header="Channel"
                                        Binding="{Binding Channel, UpdateSourceTrigger=PropertyChanged}"
                                        Width="100"/>
                    <DataGridTextColumn Header="Object"
                                        Binding="{Binding Object, UpdateSourceTrigger=PropertyChanged}"
                                        Width="250"/>
                    <DataGridTextColumn Header="Message"
                                        Binding="{Binding Message, UpdateSourceTrigger=PropertyChanged}"
                                        Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </Border>
</UserControl>
