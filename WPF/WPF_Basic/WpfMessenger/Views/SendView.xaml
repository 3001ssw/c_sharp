<UserControl x:Class="WpfMessenger.Views.SendView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="600"
             d:DesignWidth="800">

    <Border BorderThickness="1"
            BorderBrush="Black">

        <ScrollViewer HorizontalScrollBarVisibility="Auto"
                      VerticalScrollBarVisibility="Auto">
            <Grid ShowGridLines="False"
                  Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="80"/>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="80"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="100"/>
                </Grid.ColumnDefinitions>

                <!--#region Send String-->
                <TextBlock Grid.Row="0"
                           Grid.Column="0"
                           Text="Send"
                           TextAlignment="Center"
                           Margin="3"/>
                <TextBox Grid.Row="0"
                         Grid.Column="1"
                         Grid.ColumnSpan="3"
                         Text="{Binding SendValue, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                         Margin="3"/>
                <Button Grid.Row="0"
                        Grid.Column="4"
                        Content="Send"
                        Command="{Binding SendValueCommand}"
                        Margin="3"/>
                <!--#endregion-->

                <!--#region Send String-->
                <TextBlock Grid.Row="1"
                           Grid.Column="0"
                           Text="String"
                           TextAlignment="Center"
                           Margin="3"/>
                <TextBox Grid.Row="1"
                         Grid.Column="1"
                         Grid.ColumnSpan="3"
                         Text="{Binding SendString, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                         Margin="3"/>
                <Button Grid.Row="1"
                        Grid.Column="4"
                        Content="Send"
                        Command="{Binding SendStringCommand}"
                        Margin="3"/>
                <!--#endregion-->

                <!--#region Send Integer-->
                <TextBlock Grid.Row="2"
                           Grid.Column="0"
                           Text="Integer"
                           TextAlignment="Center"
                           Margin="3"/>
                <TextBox Grid.Row="2"
                         Grid.Column="1"
                         Grid.ColumnSpan="3"
                         Text="{Binding SendInteger, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                         Margin="3"/>
                <Button Grid.Row="2"
                        Grid.Column="4"
                        Content="Send"
                        Command="{Binding SendIntegerCommand}"
                        Margin="3"/>
                <!--#endregion-->

                <!--#region Send Text through Channel-->
                <TextBlock Grid.Row="3"
                           Grid.Column="0"
                           Text="Channel"
                           TextAlignment="Center"
                           Margin="3"/>
                <TextBox Grid.Row="3"
                         Grid.Column="1"
                         Text="{Binding Channel, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                         Margin="3"/>
                <TextBlock Grid.Row="3"
                           Grid.Column="2"
                           Text="Text"
                           TextAlignment="Center"
                           Margin="3"/>
                <TextBox Grid.Row="3"
                         Grid.Column="3"
                         Text="{Binding Text, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                         Margin="3"/>
                <Button Grid.Row="3"
                        Grid.Column="4"
                        Content="Send"
                        Command="{Binding SendTextChannelCommand}"
                        Margin="3"/>
                <!--#endregion-->
            </Grid>
        </ScrollViewer>
    </Border>
</UserControl>