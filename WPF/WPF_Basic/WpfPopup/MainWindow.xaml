<!--  MainWindow.xaml  -->
<mah:MetroWindow x:Class="WpfMahAppsDemo.MainWindow"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
                 Title="MahApps.Metro 데모"
                 Height="450"
                 Width="600"
                 GlowBrush="{DynamicResource MahApps.Brushes.Accent}"
                 BorderThickness="1">

    <Grid Margin="20">
        <StackPanel VerticalAlignment="Center">
            <Button Content="1. 간단 메시지 팝업"
                    Command="{Binding ShowMessageCommand}"
                    Height="50"
                    FontSize="16"/>
            <Button Content="2. 입력 팝업 (이름 입력)"
                    Command="{Binding ShowInputCommand}"
                    Height="50"
                    FontSize="16"/>
            <Button Content="3. 확인/취소 팝업"
                    Command="{Binding ShowConfirmCommand}"
                    Height="50"
                    FontSize="16"/>
            <Button Content="4. 커스텀 팝업 (UserControl)"
                    Command="{Binding ShowCustomCommand}"
                    Height="50"
                    FontSize="16"/>
        </StackPanel>
    </Grid>
</mah:MetroWindow>