<Window x:Class="WpfDatabase.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfDatabase"
        mc:Ignorable="d"
        Title="MainWindow"
        Height="450"
        Width="1000">
    <Window.DataContext>
        <local:MainViewModel/>
    </Window.DataContext>
    <StackPanel>
        <!--#region Create Database-->
        <StackPanel Orientation="Horizontal">
            <TextBlock Margin="5"
                       TextAlignment="Right"
                       Text="Status: "/>
            <TextBlock Margin="5"
                       Width="100"
                       Text="{Binding Status}"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <TextBlock Margin="5"
                       TextAlignment="Right"
                       Text="Path: "/>
            <TextBox Margin="5"
                     Width="500"
                     Text="{Binding CreateDbPath}"/>
            <TextBlock Margin="5"
                       TextAlignment="Right"
                       Text="Name: "/>
            <TextBox Margin="5"
                     Width="100"
                     Text="{Binding CreateDbName}"/>
            <Button Margin="5"
                    Width="100"
                    Content="Create Database"
                    Command="{Binding CreateDbCommand}"/>
        </StackPanel>
        <!--#endregion-->
        <!--#region Create Database-->
        <StackPanel Orientation="Horizontal">
            <TextBlock Margin="5"
                       TextAlignment="Right"
                       Text="Connection Db File Path: "/>
            <TextBox Margin="5"
                     Width="500"
                     Text="{Binding ConnectionDbFilePath}"/>
            <Button Margin="5"
                    Width="100"
                    Content="Connection Database"
                    Command="{Binding ConnectionDbFilePathCommand}"/>
        </StackPanel>
        <!--#endregion-->
    </StackPanel>
</Window>
