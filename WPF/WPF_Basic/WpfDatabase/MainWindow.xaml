<Window x:Class="WpfDatabase.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfDatabase"
        mc:Ignorable="d"
        Title="MainWindow"
        Height="450"
        Width="1000">
    <Window.DataContext>
        <local:MainViewModel/>
    </Window.DataContext>
    <StackPanel>
        <!--#region status-->
        <StackPanel Orientation="Horizontal">
            <TextBlock Margin="5"
                       TextAlignment="Right"
                       Text="Status: "/>
            <TextBlock Margin="5"
                       Width="100"
                       Text="{Binding Status}"/>
        </StackPanel>
        <!--  connection database  -->
        <StackPanel Orientation="Horizontal">
            <TextBlock Margin="5"
                       TextAlignment="Right"
                       Text="Connection Db File Path: "/>
            <TextBox Margin="5"
                     Width="600"
                     Text="{Binding ConnectionDbFilePath}"/>
            <Button Margin="5"
                    Width="150"
                    Content="Connection Database"
                    Command="{Binding ConnectionDbFilePathCommand}"/>
        </StackPanel>
        <!--    -->
    </StackPanel>
</Window>
