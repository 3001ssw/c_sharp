<Window x:Class="WpfTask.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfTask"
        xmlns:vms="clr-namespace:WpfTask.ViewModels"
        xmlns:views="clr-namespace:WpfTask.Views"
        mc:Ignorable="d"
        Title="MainWindow"
        Height="450"
        Width="800">
    <Window.DataContext>
        <local:MainWindowViewModel/>
    </Window.DataContext>
    <Window.Resources>
        <DataTemplate DataType="{x:Type vms:TabItemSimpleTaskViewModel}">
            <views:TabItemSimpleTaskView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vms:TabItemTaskViewModel}">
            <views:TabItemTaskView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vms:TabItemFuncTaskViewModel}">
            <views:TabItemFuncTaskView/>
        </DataTemplate>
    </Window.Resources>
    <TabControl ItemsSource="{Binding Tabs}"
                SelectedItem="{Binding SelectedTab, Mode=TwoWay}">

        <!--#region 헤더 정의-->
        <TabControl.ItemTemplate>
            <DataTemplate>
                <TextBlock Text="{Binding Header}"/>
            </DataTemplate>
        </TabControl.ItemTemplate>
        <!--#endregion-->
        <!--#region 하단 본문 정의-->
        <TabControl.ContentTemplate>
            <DataTemplate>
                <Border BorderBrush="DarkGray"
                        BorderThickness="2"
                        CornerRadius="3"
                        Margin="5">
                    <ContentControl Content="{Binding}"/>
                </Border>
            </DataTemplate>
        </TabControl.ContentTemplate>
        <!--#endregion-->
    </TabControl>
</Window>
