<UserControl x:Class="WpfTask.Views.TabItemSimpleTaskView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:WpfTask.Views"
             xmlns:b="clr-namespace:WpfTask.Behaviors"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Row="0"
                    Grid.Column="0"
                    Orientation="Horizontal">
            <Button Content="Test 1"
                    Width="100"
                    Margin="5"
                    Command="{Binding Test01Command}"/>
            <Button Content="Test 2"
                    Width="100"
                    Margin="5"
                    Command="{Binding Test02Command}"/>

            <TextBox Width="50"
                     Margin="5"
                     Text="{Binding Count}"/>
            <Button Content="Test 3"
                    Width="100"
                    Margin="5"
                    Command="{Binding Test03Command}"/>

            <Button Content="Test 4"
                    Width="100"
                    Margin="5"
                    Command="{Binding Test04Command}"/>
            <TextBlock Width="100"
                       Margin="5"
                       Text="{Binding Result}"/>
        </StackPanel>

        <DataGrid Grid.Row="1"
                  Grid.Column="0"
                  Margin="5"
                  ItemsSource="{Binding Logs}"
                  AutoGenerateColumns="False"
                  HeadersVisibility="Column"
                  IsReadOnly="True"
                  SelectionMode="Extended"
                  SelectionUnit="FullRow"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  GridLinesVisibility="All"
                  VirtualizingStackPanel.ScrollUnit="Pixel"
                  VirtualizingStackPanel.VirtualizationMode="Recycling">
            <i:Interaction.Behaviors>
                <b:DataGridBehavior IsAutoScroll="True"/>
            </i:Interaction.Behaviors>
            <DataGrid.Columns>
                <DataGridTextColumn Header="Time"
                                    Binding="{Binding Time, StringFormat='{}HH:mm:ss.fff'}"
                                    Width="150"/>
                <DataGridTextColumn Header="Message"
                                    Binding="{Binding Message}"
                                    Width="1*"/>
            </DataGrid.Columns>
        </DataGrid>


    </Grid>
</UserControl>
