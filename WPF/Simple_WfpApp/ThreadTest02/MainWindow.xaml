<Window x:Class="ThreadTest01.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:ThreadTest01"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="MainWindow"
        Width="800"
        Height="450"
        mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0"
                    Orientation="Horizontal">
            <Button Width="100"
                    Margin="5"
                    Command="{Binding ThreadStartCommand}"
                    Content="Start"/>
            <Button Width="100"
                    Margin="5"
                    Command="{Binding ThreadPauseCommand}"
                    Content="Pause"/>
            <Button Width="100"
                    Margin="5"
                    Command="{Binding ThreadStopCommand}"
                    Content="Stop"/>
        </StackPanel>
        <TextBlock Grid.Row="1"
                   Text="{Binding Count}"/>
        <ListView Grid.Row="2"
                  VerticalAlignment="Stretch"
                  ItemsSource="{Binding ListMsg}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border Background="LightGray"
                            BorderThickness="1">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding Index}"
                                       Margin="5"/>
                            <TextBlock Text="{Binding Message}"
                                       Margin="5"/>
                            <TextBlock Text="{Binding Description}"
                                       Margin="5"/>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Window>
