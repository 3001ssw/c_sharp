<Window x:Class="ThreadTest02.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:ThreadTest02"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="MainWindow"
        Width="800"
        Height="450"
        mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <Button Width="100"
                    Margin="5"
                    Command="{Binding StartCommand}"
                    Content="Start" />
            <Button Width="100"
                    Margin="5"
                    Command="{Binding PauseCommand}"
                    Content="Pause" />
            <Button Width="100"
                    Margin="5"
                    Command="{Binding StopCommand}"
                    Content="Stop" />
            <Button Width="100"
                    Margin="10,5,5,5"
                    Command="{Binding StartTestCommand}"/>
            <Button Width="100"
                    Margin="5"
                    Command="{Binding PauseTestCommand}"
                    Content="Task Pause" />
            <Button Width="100"
                    Margin="5"
                    Command="{Binding StopTestCommand}"
                    Content="Task Stop" />
        </StackPanel>
        <TextBlock Grid.Row="1" Text="{Binding Count}" />
        <ListView Grid.Row="2"
                  VerticalAlignment="Stretch"
                  ItemsSource="{Binding ListMsg}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border Background="LightGray" BorderThickness="1">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Margin="5" Text="{Binding Index}" />
                            <TextBlock Margin="5" Text="{Binding Message}" />
                            <TextBlock Margin="5" Text="{Binding Description}" />
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Window>
