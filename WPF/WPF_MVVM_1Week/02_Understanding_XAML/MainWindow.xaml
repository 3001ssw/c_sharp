<Window x:Class="_02_Understanding_XAML.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_02_Understanding_XAML"
        xmlns:vehicle="clr-namespace:Vehicle"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <vehicle:Car x:Name="MyCar" CarName="Hyudai" Speed="10.12">
        <vehicle:Car.Driver>
            <vehicle:Human Name="David" Age="20"/>
        </vehicle:Car.Driver>
    </vehicle:Car>
</Window>
