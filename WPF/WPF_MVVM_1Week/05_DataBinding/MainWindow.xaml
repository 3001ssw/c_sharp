<Window x:Class="_05_DataBinding.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_05_DataBinding"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <!--TextBox의 Text가 바인딩 됨-->
        <TextBox x:Name="tbColor" Text="Yellow" Margin="5"/>
        <Label x:Name="label" Background="{Binding Text, ElementName=tbColor}" Content="This is Label" Margin="5"/>

        <!--slider의 Value가 Binding됨-->
        <Slider x:Name="slider" Minimum="0" Maximum="100" Value="50" Margin="5"/>
        <ProgressBar Value="{Binding Value, ElementName=slider}" Height="30" Margin="5"/>
        <TextBox x:Name="tbColor_Text" Text="{Binding Value, ElementName=slider, UpdateSourceTrigger=PropertyChanged}" Margin="5"/>
        
    </StackPanel>
</Window>
