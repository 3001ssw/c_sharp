<Window x:Class="Test.MainWindow"
        xmlns:dxdo="http://schemas.devexpress.com/winfx/2008/xaml/docking"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow"
        Height="450"
        Width="800">
    <dxdo:DockLayoutManager>
        <dxdo:LayoutGroup Orientation="Horizontal">
            <dxdo:LayoutPanel Caption="Left Panel"
                              ItemWidth="200"
                              dxdo:AutoHideGroup.AutoHideType="Left"/>

            <dxdo:LayoutGroup Orientation="Vertical">
                <dxdo:LayoutPanel Caption="Top Panel"
                                  ItemHeight="200"
                                  dxdo:AutoHideGroup.AutoHideType="Top"/>
                <dxdo:LayoutPanel Caption="Center Panel"
                                  ItemHeight="400"
                                  dxdo:AutoHideGroup.AutoHideType="Default"
                                  AllowDock="False"
                                  AllowFloat="False"
                                  AllowHide="False"
                                  AllowClose="False"
                                  AllowDrag="False"/>
                <dxdo:LayoutPanel Caption="Bottom Panel"
                                  dxdo:AutoHideGroup.AutoHideType="Bottom"/>
            </dxdo:LayoutGroup>

            <dxdo:TabbedGroup>
                <dxdo:LayoutPanel Caption="Right Panel"
                                  ItemWidth="200"
                                  dxdo:AutoHideGroup.AutoHideType="Right"/>
                <dxdo:LayoutPanel Caption="Right Panel"
                                  ItemWidth="200"
                                  dxdo:AutoHideGroup.AutoHideType="Right"/>
            </dxdo:TabbedGroup>
        </dxdo:LayoutGroup>
    </dxdo:DockLayoutManager>
</Window>
