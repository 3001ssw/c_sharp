<Window xmlns:dxdo="http://schemas.devexpress.com/winfx/2008/xaml/docking"
        xmlns:dxmvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm"
        x:Class="WpfDevDockLayoutManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfDevDockLayoutManager"
        mc:Ignorable="d"
        Title="MainWindow"
        Height="450"
        Width="800">
    <Window.DataContext>
        <local:MainViewModel/>
    </Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0"
                    Orientation="Horizontal">
            <Button Content="Test"
                    Margin="3"
                    Command="{Binding TestCommand}"/>
            <Button Content="Left"
                    Margin="3"
                    Command="{Binding LeftCommand}"/>
            <Button Content="Right"
                    Margin="3"
                    Command="{Binding RightCommand}"/>
        </StackPanel>

        <dxdo:DockLayoutManager Grid.Row="1"
                                ItemsSource="{Binding Panels}"
                                ActiveDockItem="{Binding ActivePanel, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">

            <dxdo:DockLayoutManager.ItemTemplate>
                <DataTemplate>
                    <dxdo:LayoutPanel Caption="{Binding Caption}"
                                      CaptionImage="{Binding CaptionImage}"
                                      Visibility="{Binding IsVisibility}"
                                      IsActive="{Binding IsActive}"
                                      AutoHidden="{Binding AutoHidden}"
                                      CloseCommand="{Binding PanelClosedCommand}"/>
                </DataTemplate>
            </dxdo:DockLayoutManager.ItemTemplate>

            <dxdo:LayoutGroup Name="root"
                              Orientation="Horizontal">
                <dxdo:LayoutGroup Name="LeftGroup"/>
                <dxdo:LayoutGroup Name="RightGroup"/>
            </dxdo:LayoutGroup>
        </dxdo:DockLayoutManager>
    </Grid>
</Window>
