<Window x:Class="_DockLayout.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_DockLayout"
        xmlns:dxdo="http://schemas.devexpress.com/winfx/2008/xaml/docking"
        mc:Ignorable="d"
        Title="MainWindow"
        Height="450"
        Width="800">
    <dxdo:DockLayoutManager>

        <dxdo:LayoutGroup Orientation="Vertical">

            <!--  Top Panel  -->
            <dxdo:LayoutPanel Caption="Top Panel"/>

            <dxdo:LayoutGroup Orientation="Horizontal">
                <!--  Left Panel  -->
                <dxdo:LayoutPanel Caption="Left Panel"/>

                <!--  Center Panel  -->
                <dxdo:LayoutPanel Caption="Center Panel"/>

                <!--  Right Panel  -->
                <dxdo:LayoutPanel Caption="Right Panel"/>
            </dxdo:LayoutGroup>

            <!--  Bottom Panel  -->
            <dxdo:LayoutPanel Caption="Bottom Panel"/>
        </dxdo:LayoutGroup>
    </dxdo:DockLayoutManager>
</Window>
